<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<!--  Layout del mensaje completo -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" >
		

		<!--  Layout horizontal de Grupo -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="#cccccc"
			android:layout_weight="1">
			
			<TextView android:id="@+id/text_grouplabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Groups: " android:textStyle="italic"
				android:textColor="#000000" android:textSize="6pt"/>
				
			<EditText android:id="@+id/edit_groups" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textStyle="italic"
				android:textColor="#000000" android:scrollHorizontally="true"
				android:singleLine="true" android:textSize="6pt" />
		</LinearLayout>

		<!--  Layout horizontal de Subject -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="#cccccc"
			android:layout_weight="1">
			
			<TextView android:id="@+id/text_subjectlabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Subject: " android:textStyle="italic"
				android:textColor="#000000" android:textSize="6pt"/>
				
			<EditText android:id="@+id/edit_subject"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textStyle="italic" android:textColor="#000000"
				android:scrollHorizontally="true" android:singleLine="true"
				android:textSize="6pt" android:capitalize="sentences" />
		</LinearLayout>

		<!--  Text body -->
		<EditText android:id="@+id/edit_body" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:scrollbars="vertical"
			android:gravity="left" android:autoText="true"
			android:capitalize="sentences" 
			android:layout_weight="8" 
			android:textSize="7pt"/>

	</LinearLayout> <!-- Message Layout -->


</LinearLayout> <!-- Top level layout -->