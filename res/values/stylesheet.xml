<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="titlebar_textSize">18sp</dimen>
    <dimen name="titleBar_height">42sp</dimen>
    <dimen name="subjectLine_height">24sp</dimen>

    <color name="window_bg">@color/white</color>
    <color name="white">#ffffff</color>
    <color name="black">#ff000000</color>
    <color name="red">#ff0000</color>
    <color name="blue">#0000ff</color>
    <color name="green">#00ff00</color>
    <color name="titlebar_bg">#7080FF</color>
    <color name="messagelist_item_newsubject">@color/titlebar_bg</color>

    <style name="Theme" parent="android:Theme" />

    <style name="Theme.White">
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:colorForeground">#fff</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">#000</item>
        <item name="android:windowBackground">@color/window_bg</item>
    </style>

    <style name="WhiteBg">
        <item name="android:textColor">#000</item>
    </style>

    <style name="titleBar">
        <item name="android:layout_height">@dimen/titleBar_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/titlebar_bg</item>
    </style>

    <style name="titleBar.spacer">
        <item name="android:layout_width">1px</item>
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="titleBar.title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/titlebar_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingLeft">12sp</item>
    </style>

    <style name="titleBar.button">
        <item name="android:layout_width">@dimen/titleBar_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">7sp</item>
    </style>

</resources>