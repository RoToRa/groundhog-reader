<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="bottom"
	android:cacheColorHint="#00000000"
	android:padding="0px">

	<LinearLayout
		android:id="@+id/layout_topbar"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="0px"
		android:paddingBottom="3px"
		android:gravity="left">
		<ImageView
			android:id="@+id/btn_gogroups"
			style="@style/titleBar.button"
			android:src="@drawable/ic_title_home"
			android:layout_gravity="left" />
		<View
			style="@style/titleBar.spacer" />
		<TextView
			android:id="@+id/topbar_text"
			style="@style/titleBar.title" />
		<View
			style="@style/titleBar.spacer" />
		<ImageView
			android:id="@+id/messageList_sync"
			style="@style/titleBar.button"
			android:layout_gravity="right"
			android:src="@drawable/ic_title_refresh" />
	</LinearLayout>


	<ListView
		android:id="@+id/list_msgs"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:padding="3px"
		android:paddingLeft="0px"
		android:paddingRight="0px" />

</LinearLayout>
