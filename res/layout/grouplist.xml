<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="bottom"
	android:cacheColorHint="#00000000"
	android:padding="0px">

	<LinearLayout
		android:id="@+id/layout_topbar"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="left">

		<TextView
			android:id="@+id/topbar"
			android:text="@string/app_name"
			style="@style/titleBar.title"/>

		<ImageView
			android:layout_width="1px"
			android:layout_height="wrap_content" />

		<ImageView
			android:id="@+id/btn_sync_groups"
			style="@style/titleBar.button"
            android:layout_gravity="right"
			android:src="@drawable/ic_title_refresh" />

		<ImageView
			android:layout_width="1px"
			android:layout_height="wrap_content" />

		<ImageView
			android:id="@+id/btn_add_groups"
			style="@style/titleBar.button"
            android:layout_gravity="right"
			android:src="@drawable/ic_title_add" />
	</LinearLayout>

	<TextView

		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/msglist_group_list" />

	<ListView
		android:id="@+id/list_groups"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:padding="3px" />

</LinearLayout>
